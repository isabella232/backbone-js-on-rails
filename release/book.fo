    <fo:inline font-weight="bold" color="blue">this</fo:inline>.model.comments.on(<fo:inline font-weight="bold" font-style="italic">"add"</fo:inline>,    <fo:inline font-weight="bold" color="blue">this</fo:inline>.render);
  },

