    <fo:inline font-weight="bold">&lt;div&gt;</fo:inline>
      <fo:inline font-weight="bold">&lt;tr&gt;</fo:inline>
        <fo:inline font-weight="bold">&lt;td&gt;</fo:inline>Task 2<fo:inline font-weight="bold">&lt;/td&gt;</fo:inline>
